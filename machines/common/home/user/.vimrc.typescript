
autocmd BufNewFile,BufRead *.ts call Typescript()
function Typescript()
  setlocal
  \ textwidth=80
  \ tabstop=2
  \ shiftwidth=2
  \ softtabstop=2
  \ expandtab
  \ autoindent
  \ nosmartindent
  \ nocindent
  \ list
  \ listchars=tab:»·,trail:·
  \ filetype=typescript
  \ syntax=typescript
endfunction
